<!--pages/form/form.wxml-->
<view class="form-bg">
  <image src="./receveTitel.png" mode="aspectFit" class="title"></image>
  <!-- <text>test:这是第{{gradeLevel}}关的奖</text> -->
  <text class="sub-title">请及时填写个人信息：姓名、手机号、地址；凭借相关信息至重庆高新区管委会5号楼247室（公共服务局文旅科）领取，咨询电话：68680032</text>
 <form catchsubmit="formSubmit" catchreset="formReset">
    <view class="form-item">
      <text class="label">姓名</text>
      <input name='name' class="form-input"  placeholder="请填写收件人姓名"/>
    </view>
     <view class="form-item">
      <text class="label">手机号</text>
      <input class="form-input" name='phone'  placeholder="请填写收件人手机号"/>
    </view>
     <view class="form-item">
      <text class="label">所在城市</text>
      <input class="form-input" name='area'  placeholder="请填写您所在的城市"/>
    </view>
     <view class="form-item">
      <text class="label">详细地址</text>
      <input class="form-input" name='address'  placeholder="如某街道某小区"/>
    </view> 
    <button class="submit-btn" formType="submit" >提交</button>
 </form>
 <image src="./btlogo.png" class="bt-logo" mode="aspectFit"></image>
</view>
